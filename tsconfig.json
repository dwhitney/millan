{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "paths": {
      "*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*"
  ]
}
